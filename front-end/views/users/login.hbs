<main>
     <header class="header">
        <a href="/">
            <img src="../images/logoL.png" alt="logo" class="logo">
        </a>
        <input type="checkbox" id="check">
        <label for="check" class="icons">
            <i class='bx bx-menu-alt-right' id="menu-icon"></i>
            <i class='bx bx-menu-alt-left' id="close-icon"></i>
        </label>
        <nav class="navbar">
            <a href="/" style="--i:0;">Home</a>
            {{#if isAuthenticated}}
            <a href="/notes/records" style="--i:1;">Your notes</a>
            <a href="/notes/note" style="--i:2;">Create</a>
            <a href="/users/logout" style="--i:3;">Logout</a>
            {{else}}
            <a href="/users/login" style="--i:4;">Login</a>
            <a href="/users/register" style="--i:5;">Register</a>
            {{/if}}
            <a href="/about" style="--i:6;">About</a>

        </nav>
    </header>
    <div class="main-auth-page">
        <div class="form">
            <h1>Login</h1>
            <form method="POST">
                <div class="input-box">
                    <input type="text" id="username" name="username" placeholder="Username">
                    <span></span>
                </div>
                <div class="input-box">
                    <input type="password" id="password" name="password" placeholder="Password">
                    <span></span>
                </div>
                <input type="submit" class="submit-btn" value="Login">
                <div class="register-link">
                    Don't have an account?
                    <a href="/users/register">Register</a>
                </div>
            </form>
            {{#if errorMessage}}
            <div class="notification">
                <p class="notification-message">{{errorMessage}}</p>
            </div>
            {{/if}}
        </div>
    </div>
</main>